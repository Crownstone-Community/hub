{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "@loopback/build/config/tsconfig.common.json",
  "compilerOptions": {
    "esModuleInterop"  : true,
    "outDir"           : "dist",
    "resolveJsonModule": true,
    "declaration"      : true,
    "target"           : "es2020",
    "preserveSymlinks" : true
  },
  "include": [
    "src",
    "node_modules/crownstone-core/src/declarations/declarations.d.ts",
    "node_modules/crownstone-cloud/src/declarations/**/*",
    "node_modules/crownstone-sse/src/declarations/**/*",
    "node_modules/crownstone-logger/src/declarations/logger_types.d.ts"
  ]
}
